{
  "manifest_version": 3,
  "name": "ByeAI — Hide AI‑generated YouTube videos",
  "description": "Crowdsourced filter that removes AI‑generated videos on YouTube.",
  "version": "1.0",
  "permissions": ["storage", "scripting", "contextMenus", "activeTab", "downloads"],
  "host_permissions": ["https://api.byeai.org/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "ByeAI",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["i18n.json"],
      "matches": ["*://www.youtube.com/*"]
    }
  ]
}
